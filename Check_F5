#!/usr/bin/env bash
set -euo pipefail

#######################################
# CONFIG
#######################################
DEVICES_FILE="devices.txt"
LOCAL_BACKUP_DIR="/backups/f5"
REMOTE_UCS_DIR="/var/local/ucs"

BACKUP_DIR="${LOCAL_BACKUP_DIR}/backup"
LOG_DIR="${LOCAL_BACKUP_DIR}/logs"

MAX_PARALLEL=4
JOB_DELAY=0.5
UCS_POLL_SLEEP=2
UCS_TIMEOUT_SEC=3600
STATUS_REFRESH_SEC=2

#######################################
# PRECHECKS
#######################################
for bin in ssh scp sshpass date wc; do
  command -v "$bin" >/dev/null || { echo "âŒ $bin requis"; exit 1; }
done

[[ -f "$DEVICES_FILE" ]] || { echo "âŒ Fichier Ã©quipements introuvable : $DEVICES_FILE"; exit 1; }
mkdir -p "$BACKUP_DIR" "$LOG_DIR"

#######################################
# INPUTS
#######################################
read -p "Utilisateur SSH (root recommandÃ©): " SSH_USER
read -s -p "Mot de passe SSH: " SSH_PASS
echo

#######################################
# FUNCTIONS
#######################################
ssh_run() {
  local HOST="$1"; shift
  sshpass -p "$SSH_PASS" ssh -n \
    -o StrictHostKeyChecking=no \
    -o ConnectTimeout=15 \
    -o LogLevel=Error \
    "$SSH_USER@$HOST" "$@"
}

scp_get() {
  local HOST="$1" SRC="$2" DEST="$3"
  sshpass -p "$SSH_PASS" scp -q \
    -o StrictHostKeyChecking=no \
    -o ConnectTimeout=30 \
    "$SSH_USER@$HOST:$SRC" \
    "$DEST/"
}

create_ucs() {
  local HOST="$1" UCS_NAME="$2"
  ssh_run "$HOST" "bash -lc 'tmsh save sys ucs \"${UCS_NAME}\"'"
}

wait_for_ucs() {
  local HOST="$1" UCS_NAME="$2"
  local start now
  start=$(date +%s)

  while true; do
    if ssh_run "$HOST" "bash -lc 'test -f \"${REMOTE_UCS_DIR}/${UCS_NAME}\"'"; then
      return 0
    fi
    now=$(date +%s)
    (( now - start > UCS_TIMEOUT_SEC )) && return 1
    sleep "$UCS_POLL_SLEEP"
  done
}

backup_host() {
  local HOST="$1"

  local UCS_NAME="${HOST}.ucs"
  local LOG="${LOG_DIR}/${HOST}.log"
  local STATUS_FILE="${LOG_DIR}/${HOST}.status"

  echo "RUNNING: create_ucs" > "$STATUS_FILE"

  {
    echo "âž¡ï¸  [$HOST] Sauvegarde UCS"
    echo "UCS : $UCS_NAME"
    echo "Dest: $BACKUP_DIR"

    echo "ðŸ“¦ [$HOST] CrÃ©ation UCS"
    create_ucs "$HOST" "$UCS_NAME"

    echo "RUNNING: wait_for_ucs" > "$STATUS_FILE"
    echo "â³ [$HOST] Attente gÃ©nÃ©ration UCS"
    wait_for_ucs "$HOST" "$UCS_NAME"

    echo "RUNNING: scp" > "$STATUS_FILE"
    echo "â¬‡ï¸  [$HOST] Transfert UCS"
    scp_get "$HOST" "${REMOTE_UCS_DIR}/${UCS_NAME}" "$BACKUP_DIR"

    echo "OK" > "$STATUS_FILE"
    echo "âœ… [$HOST] UCS rÃ©cupÃ©rÃ© : $BACKUP_DIR/$UCS_NAME"
  } >"$LOG" 2>&1 || {
    echo "KO" > "$STATUS_FILE"
    exit 1
  }
}

print_status() {
  clear
  echo "======================================"
  echo "ðŸ“¦ Sauvegarde UCS BIG-IP â€“ Ã©tat en cours"
  echo "UCS  -> $BACKUP_DIR"
  echo "Logs -> $LOG_DIR"
  echo "======================================"
  echo

  printf "%-30s %s\n" "Ã‰quipement" "Statut"
  printf "%-30s %s\n" "----------" "------"

  for f in "$LOG_DIR"/*.status; do
    [[ -e "$f" ]] || continue
    host=$(basename "$f" .status)
    state=$(cat "$f" 2>/dev/null || echo "UNKNOWN")
    printf "%-30s %s\n" "$host" "$state"
  done

  echo
  echo "Actualisation toutes les ${STATUS_REFRESH_SEC}s"
}

# Compte combien de PIDs (passÃ©s en args) sont encore vivants
count_running_pids() {
  local c=0 pid
  for pid in "$@"; do
    [[ -z "$pid" ]] && continue
    if kill -0 "$pid" 2>/dev/null; then
      c=$((c+1))
    fi
  done
  echo "$c"
}

#######################################
# MAIN
#######################################
echo
echo "ðŸ“¦ Sauvegarde UCS BIG-IP"
echo "ParallÃ©lisme : $MAX_PARALLEL"
echo "UCS ->       : $BACKUP_DIR"
echo "Logs ->      : $LOG_DIR"
echo

# Watcher
WATCHER_PID=""
watcher() {
  while true; do
    print_status
    sleep "$STATUS_REFRESH_SEC"
  done
}
watcher &
WATCHER_PID=$!

cleanup() {
  [[ -n "${WATCHER_PID:-}" ]] && kill "$WATCHER_PID" >/dev/null 2>&1 || true
}
trap cleanup EXIT

PIDS=()

while IFS= read -r LINE || [[ -n "$LINE" ]]; do
  HOST=$(echo "$LINE" | tr -d '\r' | xargs)
  [[ -z "$HOST" || "$HOST" =~ ^# ]] && continue

  # Throttle: attendre si on a dÃ©jÃ  MAX_PARALLEL jobs en cours
  while [[ "$(count_running_pids "${PIDS[@]}")" -ge "$MAX_PARALLEL" ]]; do
    sleep 1
  done

  backup_host "$HOST" &
  PIDS+=("$!")
  sleep "$JOB_DELAY"
done < "$DEVICES_FILE"

# Attendre uniquement les backups
FAILS=0
for pid in "${PIDS[@]}"; do
  if ! wait "$pid"; then
    FAILS=$((FAILS+1))
  fi
done

# Stop watcher + affichage final
kill "$WATCHER_PID" >/dev/null 2>&1 || true
print_status

echo "======================================"
echo "ðŸŽ¯ Sauvegarde UCS terminÃ©e"
echo "UCS  : $BACKUP_DIR"
echo "Logs : $LOG_DIR"
echo "Ã‰checs : $FAILS"
echo "======================================"

(( FAILS == 0 )) || exit 1
