#!/usr/bin/env bash
set -euo pipefail

#######################################
# CONFIG
#######################################
DEVICES_FILE="devices.txt"
GREP_FILTER='LTM::Virtual\\|Availability'

#######################################
# PRECHECKS
#######################################
for bin in ssh sshpass grep; do
  command -v "$bin" >/dev/null || { echo "âŒ $bin requis"; exit 1; }
done

[[ -f "$DEVICES_FILE" ]] || { echo "âŒ Fichier Ã©quipements introuvable : $DEVICES_FILE"; exit 1; }

#######################################
# INPUTS
#######################################
read -p "Utilisateur SSH (root recommandÃ©): " SSH_USER
read -s -p "Mot de passe SSH: " SSH_PASS
echo

#######################################
# MAIN LOOP
#######################################
while IFS= read -r LINE || [[ -n "$LINE" ]]; do
  HOST=$(echo "$LINE" | tr -d '\r' | xargs)
  [[ -z "$HOST" || "$HOST" =~ ^# ]] && continue

  echo "======================================"
  echo "âž¡ï¸  BIG-IP : $HOST"
  echo "======================================"

  # âš¡ Commande TMSH simple via SSH avec grep
  sshpass -p "$SSH_PASS" ssh -o StrictHostKeyChecking=no -o ConnectTimeout=15 \
    "$SSH_USER@$HOST" 'tmsh -c "cd /; show ltm virtual recursive"' \
    2>/dev/null | grep -E "$GREP_FILTER"

  echo
done < "$DEVICES_FILE"

echo "======================================"
echo "ðŸ VÃ©rification terminÃ©e"
