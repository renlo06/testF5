#!/usr/bin/env bash
set -euo pipefail

#######################################
# CONFIG
#######################################
DEVICES_FILE="devices.txt"
OUT_BASE="./checks"
TS="$(date +%Y%m%d-%H%M%S)"
RUN_DIR="${OUT_BASE}/${TS}"
ERR_LOG="${RUN_DIR}/errors.log"

#######################################
# PRECHECKS
#######################################
for bin in ssh sshpass date grep; do
  command -v "$bin" >/dev/null || { echo "‚ùå $bin requis"; exit 1; }
done

[[ -f "$DEVICES_FILE" ]] || { echo "‚ùå Fichier √©quipements introuvable : $DEVICES_FILE"; exit 1; }
mkdir -p "$RUN_DIR"
: > "$ERR_LOG"

#######################################
# INPUTS
#######################################
read -p "Utilisateur SSH (ex: root/admin): " SSH_USER
read -s -p "Mot de passe SSH: " SSH_PASS
echo

#######################################
# SSH helper (quoting robuste)
#######################################
ssh_exec() {
  local HOST="$1"
  local CMD="$2"

  sshpass -p "$SSH_PASS" ssh -n \
    -o StrictHostKeyChecking=no \
    -o ConnectTimeout=15 \
    -o LogLevel=Error \
    "${SSH_USER}@${HOST}" \
    "bash -lc '$CMD'"
}

#######################################
# Checks par √©quipement
#######################################
run_checks_for_host() {
  local HOST="$1"
  local HOST_DIR="${RUN_DIR}/${HOST}"
  mkdir -p "$HOST_DIR"

  echo "======================================"
  echo "‚û°Ô∏è  BIG-IP : $HOST"
  echo "======================================"

  # ASM policies (pas de cd)
  echo "üîé ASM policies"
  ssh_exec "$HOST" \
    'tmsh -c "list asm policy recursive" | grep "asm policy"' \
    > "${HOST_DIR}/asm_policies.txt" 2>>"$ERR_LOG" || \
    echo "[$HOST] ‚ùå ASM policies failed" >>"$ERR_LOG"

  # Virtual Servers (pas de cd /)
  echo "üîé Virtual Servers"
  ssh_exec "$HOST" \
    'tmsh -c "show ltm virtual recursive" | grep -E "LTM::Virtual|Availability"' \
    > "${HOST_DIR}/virtual_servers.txt" 2>>"$ERR_LOG" || \
    echo "[$HOST] ‚ùå Virtual Servers failed" >>"$ERR_LOG"

  # Pools (pas de cd /)
  echo "üîé Pools"
  ssh_exec "$HOST" \
    'tmsh -c "show ltm pool recursive members" | grep -E "LTM::Pool|Availability"' \
    > "${HOST_DIR}/pools.txt" 2>>"$ERR_LOG" || \
    echo "[$HOST] ‚ùå Pools failed" >>"$ERR_LOG"

  # Nodes (pas de cd /)
  echo "üîé Nodes"
  ssh_exec "$HOST" \
    'tmsh -c "show ltm node recursive" | grep -E "LTM::Node|Availability"' \
    > "${HOST_DIR}/nodes.txt" 2>>"$ERR_LOG" || \
    echo "[$HOST] ‚ùå Nodes failed" >>"$ERR_LOG"

  echo "‚úÖ Export termin√© pour $HOST"
  echo
}

#######################################
# MAIN
#######################################
echo
echo "üìã F5 Check (tmsh) ‚Äì Run: $TS"
echo "üìÅ Sortie : $RUN_DIR"
echo "üßæ Erreurs: $ERR_LOG"
echo

while IFS= read -r LINE || [[ -n "$LINE" ]]; do
  HOST="$(echo "$LINE" | tr -d '\r' | xargs)"
  [[ -z "$HOST" || "$HOST" =~ ^# ]] && continue
  run_checks_for_host "$HOST"
done < "$DEVICES_FILE"

echo "üèÅ Termin√©"
echo "üìÅ R√©sultats : $RUN_DIR"
if [[ -s "$ERR_LOG" ]]; then
  echo "‚ö†Ô∏è  Des erreurs ont √©t√© d√©tect√©es : $ERR_LOG"
else
  echo "‚úÖ Aucun √©chec d√©tect√©"
fi
