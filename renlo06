#!/usr/bin/env bash
set -euo pipefail

#######################################
# CONFIG
#######################################
DEVICES_FILE="devices.txt"
OUT_BASE="./checks"
TS="$(date +%Y%m%d-%H%M%S)"
RUN_DIR="${OUT_BASE}/${TS}"
ERR_LOG="${RUN_DIR}/errors.log"

#######################################
# PRECHECKS
#######################################
for bin in ssh sshpass date grep; do
  command -v "$bin" >/dev/null || { echo "âŒ $bin requis"; exit 1; }
done

[[ -f "$DEVICES_FILE" ]] || { echo "âŒ Fichier Ã©quipements introuvable : $DEVICES_FILE"; exit 1; }
mkdir -p "$RUN_DIR"

#######################################
# INPUTS
#######################################
read -p "Utilisateur SSH (ex: root/admin): " SSH_USER
read -s -p "Mot de passe SSH: " SSH_PASS
echo

#######################################
# SSH helper (quoting robuste)
#######################################
ssh_exec() {
  local HOST="$1"
  local CMD="$2"

  sshpass -p "$SSH_PASS" ssh -n \
    -o StrictHostKeyChecking=no \
    -o ConnectTimeout=15 \
    -o LogLevel=Error \
    "${SSH_USER}@${HOST}" \
    "bash -lc '$CMD'"
}

#######################################
# Checks par Ã©quipement
#######################################
run_checks_for_host() {
  local HOST="$1"
  local HOST_DIR="${RUN_DIR}/${HOST}"
  mkdir -p "$HOST_DIR"

  echo "======================================"
  echo "âž¡ï¸  BIG-IP : $HOST"
  echo "======================================"

  # ASM policies (â— sans cd /)
  echo "ðŸ”Ž ASM policies"
  ssh_exec "$HOST" \
    'tmsh -c "list asm policy recursive" | grep "asm policy"' \
    > "${HOST_DIR}/asm_policies.txt" 2>>"$ERR_LOG" || \
    echo "[$HOST] âŒ ASM policies failed" >>"$ERR_LOG"

  # Virtual Servers
  echo "ðŸ”Ž Virtual Servers"
  ssh_exec "$HOST" \
    'tmsh -c "cd /; show ltm virtual recursive" | grep "LTM::Virtual\|Availability"' \
    > "${HOST_DIR}/virtual_servers.txt" 2>>"$ERR_LOG" || \
    echo "[$HOST] âŒ Virtual Servers failed" >>"$ERR_LOG"

  # Pools
  echo "ðŸ”Ž Pools"
  ssh_exec "$HOST" \
    'tmsh -c "cd /; show ltm pool recursive members" | grep "LTM::Pool\|Availability"' \
    > "${HOST_DIR}/pools.txt" 2>>"$ERR_LOG" || \
    echo "[$HOST] âŒ Pools failed" >>"$ERR_LOG"

  # Nodes
  echo "ðŸ”Ž Nodes"
  ssh_exec "$HOST" \
    'tmsh -c "cd /; show ltm node recursive" | grep "LTM::Node\|Availability"' \
    > "${HOST_DIR}/nodes.txt" 2>>"$ERR_LOG" || \
    echo "[$HOST] âŒ Nodes failed" >>"$ERR_LOG"

  echo "âœ… Export terminÃ© pour $HOST"
  echo
}

#######################################
# MAIN
#######################################
echo
echo "ðŸ“‹ F5 Check (tmsh)"
echo "ðŸ“… Run : $TS"
echo "ðŸ“ RÃ©sultats : $RUN_DIR"
echo

: > "$ERR_LOG"

while IFS= read -r LINE || [[ -n "$LINE" ]]; do
  HOST="$(echo "$LINE" | tr -d '\r' | xargs)"
  [[ -z "$HOST" || "$HOST" =~ ^# ]] && continue
  run_checks_for_host "$HOST"
done < "$DEVICES_FILE"

echo "ðŸ TerminÃ©"
if [[ -s "$ERR_LOG" ]]; then
  echo "âš ï¸  Erreurs dÃ©tectÃ©es : $ERR_LOG"
else
  echo "âœ… Aucun Ã©chec dÃ©tectÃ©"
fi
